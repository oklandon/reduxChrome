{
    "manifest_version": 2,

    "version": "0.0.1",

    "name": "Redux Chrome Extension",
    "short_name": "rce",
    "description": "description",
    "homepage_url": "https://website.com",

    "browser_action": {
        "default_icon": "./src/action/icon.png",
        "default_title": "title"
    },

    "background": {
        "scripts": [
            "./build/background.js"
        ],
        "persistent": true
    },

    "icons": {
       "16":  "./src/action/icon.png",
       "48":  "./src/action/icon.png",
       "128": "./src/action/icon.png"
    },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [],
      "js": ["./src/content/app.js"]
    }
  ],

    "permissions": [
        "tabs",
        "storage",
        "http://*/",
        "https://*/"
    ],

    "web_accessible_resources": [
        "*"
    ]
}
